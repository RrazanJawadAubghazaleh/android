<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:elevation="3dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_image_view_detail_Cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:2,2:2"


            fresco:roundedCornerRadius="25dp"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintStart_toStartOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            fresco:placeholderImage="@drawable/background_imag"
            fresco:roundBottomEnd="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundBottomStart="true"
            fresco:roundTopEnd="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundTopStart="true"
            />



</androidx.cardview.widget.CardView>
